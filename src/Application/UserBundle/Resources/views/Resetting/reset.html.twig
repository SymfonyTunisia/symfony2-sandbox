{% extends "ApplicationUserBundle::layout.html.twig" %}

{% block title 'user.resetting.title'|trans %}
{% block page_title 'user.resetting.page_title'|trans %}

{% block user_content %}
    <div class="span8 offset2">
        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
            {{ form_widget(form) }}
            <div class="text-center">
                <input type="submit" class="btn" value="{{ 'user.resetting.reset.submit'|trans }}" />
            </div>
        </form>
    </div>
{% endblock user_content %}
