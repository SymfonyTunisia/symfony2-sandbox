{% extends "ApplicationUserBundle::layout.html.twig" %}

{% block title 'user.registration.title'|trans %}
{% block page_title 'user.registration.page_title'|trans %}

{% block user_content %}
    <p class="text-center">
        {{ 'user.registration.confirmed'|trans({'%username%': user.username}) }}
    </p>

    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
        {% if targetUrl is not empty %}
            <p class="text-center">
                <a href="{{ targetUrl }}">{{ 'user.registration.back'|trans }}</a>
            </p>
        {% endif %}
    {% endif %}
{% endblock user_content %}
