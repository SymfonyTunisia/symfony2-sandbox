<div class="portfolio-title">
    <h3>{{ 'title_leave_comment'|trans({}, 'SonataNewsBundle') }}</h3>
</div>
<div class="contact-us container">
    <div class="row">
        <div class="contact-form span6">
            <form action="{{ url('sonata_news_add_comment', {'id': post_id}) }}" method="POST" class="contact_form"
                  role="form">
                {{ form_errors(form) }}
                <div class="form-group {% if form.name.vars.errors |length > 0 %}has-error{% endif %}">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>

                <div class="form-group {% if form.email.vars.errors |length > 0 %}has-error{% endif %}">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}

                </div>

                <div class="form-group {% if form.url.vars.errors |length > 0 %}has-error{% endif %}">
                    {{ form_label(form.url) }}
                    {{ form_widget(form.url) }}

                </div>

                <div class="form-group {% if form.message.vars.errors |length > 0 %}has-error{% endif %}">
                    {{ form_label(form.message) }}
                    {{ form_widget(form.message) }}

                </div>
                {{ form_rest(form) }}
                <div class="buttons-wrapper">
                    <button class="submit" type="submit">
                        Ajouter
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>