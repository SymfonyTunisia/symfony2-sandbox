<div class="portfolio-title">
    <h3>{{ 'title_comments'|trans({}, 'SonataNewsBundle') }}</h3>
</div>
<div class="portfolio portfolio-page container">
    <div class="row">
        <ul>
            {% for comment in pager.results %}
                <article class="box-news">
                    <header>
                        <div class="post-info">
                            <h5><i class="icon-calendar"></i>{{ comment.createdAt | format_date }} </h5>
                        </div>
                        <h3>{{ comment.name }}</h3>

                        <p>
                            {{ comment.message }}
                        </p>
                    </header>
                </article>

            {% else %}
                <div class="container presentation">
                    <p>{{ 'no_comments_available'|trans({}, 'SonataNewsBundle') }}</p>
                </div>
            {% endfor %}
        </ul>
    </div>
</div>